<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@color/New"
    tools:context="bodybuildingcalculator.bodybuildingcalculator.BodyTypeDialog">




     <TextView
         android:id="@+id/dialog_text2"
         android:layout_width="wrap_content"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="25dp"
         android:textSize="13sp"
         android:layout_marginRight="15dp"
         android:layout_height="wrap_content"
         android:text="@string/string_dialog_bodytype"/>


    <Button
        android:id="@+id/button_dialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/dialog_text2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/ok"
        android:textSize="14sp"

        android:textColor="@color/colorWhite" />


</RelativeLayout>
